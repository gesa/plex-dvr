#!/usr/bin/env node

const fs = require('fs')
const path = require('path')
const project = path.join(__dirname, '../tsconfig.json')
// if this is being run on a Plex server, assume it's not in active development
const dev = !process.env.PLEX && fs.existsSync(project)

if (dev) {
  require('ts-node').register({project})
}

require(`../${dev ? 'src' : 'lib'}`).run()
.catch(require('@oclif/errors/handle'))
